            {
               "$ref": "#/definitions/SourceObj"
            },
            {
               "type": "string"
            }
         ]
      },
      "links": {
         "description": "Relevant project links",
         "items": {
            "anyOf": [
               {
                  "$ref": "#/definitions/LinkObject"
